<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnIrreguralVerbs.MainPage">

    <ScrollView>
        <ListView x:Name="VerbsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Image Source="{Binding Image}" WidthRequest="50" HeightRequest="50"/>
                            <StackLayout>
                                <Label Text="{Binding Infinitive}" FontSize="20"/>
                                <Label Text="{Binding PastSimple}" FontSize="18"/>
                                <Label Text="{Binding PastParticiple}" FontSize="18"/>
                                <Label Text="{Binding Translation}" FontSize="16" TextColor="Gray"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>

</ContentPage>
